<section class="crayons-card mb-7 px-2 py-3 m:flex">
  <div class="flex flex-1">
    <div class="align-center flex-1">
      <strong class="fs-2xl fw-heavy"><%= @user.comments_count %></strong>
      <p class="color-secondary">Comments</p>
    </div>
    <div class="align-center flex-1">
      <strong class="fs-2xl fw-heavy"><%= @user.articles_count %></strong>
      <p class="color-secondary">Posts</p>
    </div>
    <div class="align-center flex-1">
      <strong class="fs-2xl fw-heavy"><%= @user.reactions_count %></strong>
      <p class="color-secondary">Reactions</p>
    </div>
  </div>
  <div class="flex flex-1">
    <div class="align-center flex-1">
      <strong class="fs-2xl fw-heavy"><%= @user.followers_count %></strong>
      <p class="color-secondary">Followers</p>
    </div>
    <div class="align-center flex-1">
      <strong class="fs-2xl fw-heavy"><%= @user.following_users_count %></strong>
      <p class="color-secondary">Following</p>
    </div>
