<h2 class="crayons-subtitle-1">Reports submitted by @<%= @user.username %> (<%= @related_reports.count %>)</h2>

<% unless @related_reports.empty? %>
  <div class="pt-3">
    <% @related_reports.each do |report| %>
      <article class="flex justify-between gap-4 py-3 border-b-1 border-0 border-solid border-base-10">
        <div>
          <h3>
            <a href="<%= admin_report_path(report.id) %>"></a>
          </h3>
          <p><%= report.message %></p>
          <p>
            <%= report.category.capitalize %>
            <span class="c-indicator">
              <%= report.status %>
            </span>
          </p>
        </div>
        <time datetime="<%= report.created_at&.strftime("%Y-%m-%dT%H:%M:%S%z") %>" class="color-base-60 fs-s shrink-0" title="<%= report.created_at&.strftime("%Y-%m-%d, %H:%M") %>">
          <%= report.created_at&.strftime("%b %e '%y") %>
        </time>
      </article>
    <% end %>
  </div>
<% else %>
  <div class="align-center flex flex-col justify-center my-auto py-8">
    <h3 class="fs-xl fw-normal mb-2">User hasn't reported anything yet.</h3>
    <p class="color-base-60">Any comment or article reported by @<%= @user.username %> will be found here.</p>
  </div>
<% end %>
